<div id="user_column">
    <div id="user_table">
      <ul id="user_data_table">
        <% @users.each do |user| %>
            <li>
              <h5 class="text-center">
                <%= link_to user do %>
                    <%= user.username %> <%= link_to "#{redirectToMonth(user)}", month_path(getMonthId(user)) %>
                <% end %>

              </h5>
              <table class="round">
                <tr>
                  <td class="title">Work Days</td>
                  <td class="value"><%= currentMonthDayCount(user) %> <%= "days".pluralize(2) %></td>
                </tr>
                <tr>
                  <td class="title">Work Hours</td>
                  <td class="value"><%= totalDailyWorkHours(user, redirectToMonth(user)) %></td>
                </tr>
                <tr>
                  <td class="title">Total Amount</td>
                  <td class="value">
                    <%= number_to_currency(totalAmount(user, redirectToMonth(user)), :locale => :ja) %>
                  </td>
                </tr>
              </table>
            </li>
        <% end %>
       </ul>
    </div>
</div>

<div id="main_data">
     <table id="monthlyBilltable">
       <thead>
        <tr>
          <td class="title">Title</td>
          <td class="amount">Amount</td>
          <td class="duedate">Due Date</td>
          <td class="confirmation">Confirmation</td>
          <td class="viewmore">More..</td>
        </tr>
       </thead>
       <tbody>
        <% @monthlyBills.each do |monthlyBill| %>
            <% if monthlyBill.duedate.strftime("%B-%y").downcase == currentYearAndMonth %>
            <tr>
              <td><%= monthlyBill.title %></td>
              <td><%= number_to_currency(monthlyBill.amount, :locale => :ja) %></td>
              <td><%= monthlyBill.duedate.strftime("%b-%d-%y") %></td>
              <td><%= monthlyBill.payment %></td>
              <td><%#= link_to "->", monthlyBill %></td>
            </tr>
            <% end %>
        <% end %>
       </tbody>

     </table>
     <%= link_to "New monthly bill", new_monthlybill_path %>
</div>

<br class="clearfloat" />