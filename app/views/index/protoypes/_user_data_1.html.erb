<div class="user_data row" style="width: 250px;">
  <div class="two columns">
    Total Cash
  </div>
  <div class="two columns text-center text-color-green">
    <%= number_to_currency(totalAmount(current_user, currentMonth), :locale => :ja) if current_user.months.present? %>
  </div>
</div>

<div class="row user_data">
  <div class="two columns">
    Worked <%= pluralizeDay if current_user.months.present?%>
  </div>
  <div class="two columns text-center text-color-green">
    <%= currentMonthDayCount if current_user.months.present? %> <%= "day".pluralize(2) if current_user.months.present?%>
  </div>
</div>