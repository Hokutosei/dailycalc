<div class="form_body1">
  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="row">
        <%= f.label :username, :class => 'two inline columns' %>
        <%= f.text_field :username, :class => 'five' %>
      </div>

      <div class="row">
        <%= f.label :password, :class => 'two inline columns' %>
        <%= f.password_field :password, :class => 'five' %>
      </div>

      <div class="row">
        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me, :class => 'one text-center inline columns' %>
            <%= f.label :remember_me, :class => 'five' %>
        <% end -%>
      </div>

      <div><%= f.submit "Sign in" %></div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
