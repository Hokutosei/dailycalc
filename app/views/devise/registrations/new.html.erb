<div class="form_body1">

  <h2 class="title_h2">Sign up!</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="row">
        <%= f.label :username, :class => 'two inline columns' %>
        <%= f.email_field :username, :class => 'five' %>
      </div>

      <div class="row">
        <%= f.label :email, :class => 'two inline columns' %>
        <%= f.email_field :email, :class => 'five' %>
      </div>

      <div class="row">
        <%= f.label :password, :class => 'two inline columns' %>
        <%= f.password_field :password, :class => 'five' %>
      </div>

      <div class="row">
        <%= f.label :password_confirmation, :class => 'two inline columns' %>
        <%= f.password_field :password_confirmation, :class => 'five' %>
      </div>

      <div><%= f.submit "Sign up", :class => 'user_registration_button' %></div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>