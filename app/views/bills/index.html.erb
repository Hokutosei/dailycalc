<h1>Listing bills</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Amount</th>
    <th>Due date</th>
    <th>Confirmation</th>
    <th>User</th>
    <th>Month</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bills.each do |bill| %>
  <tr>
    <td><%= bill.title %></td>
    <td><%= bill.amount %></td>
    <td><%= bill.due_date %></td>
    <td><%= bill.confirmation %></td>
    <td><%= bill.user_id %></td>
    <td><%= bill.month_id %></td>
    <td><%= bill.year_id %></td>
    <td><%= link_to 'Show', bill %></td>
    <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
    <td><%= link_to 'Destroy', bill, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

